# Maintainer: Howdy GUI Team <howdy@example.com>
pkgname=howdy-gui-manager
pkgver=1.0.0
pkgrel=1
pkgdesc="GUI Manager for Howdy Facial Authentication"
arch=('any')
url="https://github.com/boltgolt/howdy"
license=('MIT')
depends=('python' 'python-pyqt5' 'python-opencv' 'howdy')
makedepends=()
source=()
md5sums=()

package() {
    # Get the parent directory (howdy-gui)
    local srcdir="$(dirname "$srcdir")"
    
    # Copy executable
    install -Dm755 "$srcdir/debian-package/usr/bin/howdy-gui-manager" \
        "$pkgdir/usr/bin/howdy-gui-manager"
    
    # Copy Python modules
    mkdir -p "$pkgdir/usr/share/howdy-gui"
    cp -r "$srcdir/debian-package/usr/share/howdy-gui/"* "$pkgdir/usr/share/howdy-gui/"
    
    # Copy desktop entry
    install -Dm644 "$srcdir/debian-package/usr/share/applications/howdy-gui-manager.desktop" \
        "$pkgdir/usr/share/applications/howdy-gui-manager.desktop"
    
    # Copy icon
    install -Dm644 "$srcdir/debian-package/usr/share/icons/hicolor/256x256/apps/howdy-gui-manager.png" \
        "$pkgdir/usr/share/icons/hicolor/256x256/apps/howdy-gui-manager.png"
}
